<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render '/users/info', user: @book.user %>
      <%= render '/books/form', book: @book_new %>
    </div>
    <div class="col-xs-9">
      <table class="table table-striped">
        <h1>Book detail</h1>
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, class: "img-circle profile-thumb", fallback: "no_image.jpg" ) %>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
            <td><span class="label label-success"><%= link_to "Edit", edit_book_path(@book) %></td></span>
            <td><span class="label label-danger"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td></span>
            <% end %>
          </tr>
      </table>

    </div>
  </div>
</div>