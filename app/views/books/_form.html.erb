<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= form_for(book, url: books_path, method: :post) do |f| %>
      <h1>New book</h1>

      <% if book.errors.any? %>
      <div class="error_explanation">
        <h2><%= book.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="field row">
        <label for="book_title">Title</title>
          <input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title">
      </div>

      <div class="field row">
        <label for="book_opinion">Opinion</label>
        <textarea class="col-xs-12 book_body" name="book[body]" id="book_body"></textarea>
      </div>

      <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" date-disable-with="Create Book">
      <% end %>
    </div>
  </div>
</div>